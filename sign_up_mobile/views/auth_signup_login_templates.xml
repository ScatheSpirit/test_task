<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="auth_signup_fields_mobile" inherit_id="auth_signup.fields">
		<xpath expr="//div[@class='form-group field-name']" position="after">
			<div class="form-group">
				<label for="mobile" class="control-label">Your Mobile</label>
				<input type="text" name="mobile" t-att-value="mobile" id="mobile" class="form-control form-control-sm"
					   required="required" t-att-readonly="'readonly' if only_passwords else None"/>
			</div>
		</xpath>
	</template>
</odoo>
